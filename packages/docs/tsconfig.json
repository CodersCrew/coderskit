{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "outDir": "dist",
    "paths": {
      "@original-emotion/styled": ["../../../node_modules/@emotion/styled"],
      "@emotion/styled": ["utils/styled"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "exclude": ["node_modules", "dist", "docs", ".storybook"]
}
