{
  "version": "0.0.1",
  "repository": "https://github.com/CodersCrew/coderskit.git",
  "author": "CodersCrew",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "type-check": "lerna run type-check",
    "prettier": "lerna run prettier",
    "prettier:fix": "lerna run prettier:fix",
    "check-all": "yarn type-check && yarn lint && yarn prettier",
    "dev:coderskit": "lerna run dev --scope={coderskit}",
    "dev:docs": "lerna run dev --scope={docs}"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "deepmerge": "^4.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "lerna": "^3.16.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
